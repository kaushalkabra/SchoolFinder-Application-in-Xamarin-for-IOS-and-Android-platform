<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="LoginNavigation.ForgotPasswordPage"
	Title="SchoolFinder" BackgroundImage ="background.jpg">
	<ContentPage.Content>
		<StackLayout VerticalOptions="StartAndExpand" Padding="20" Spacing="15">
<Label Text="Forgot Password" FontFamily="Papyrus" FontSize="20"/>
<Label Text="Username" FontFamily="Papyrus" FontSize="20"/>
<Entry x:Name="usernameEntry" Placeholder="username"/>
<Label Text="Security Question" FontFamily="Papyrus" FontSize="20"/>
<Entry x:Name="securityQuestion" Placeholder="Security Question" IsEnabled="false"/>
<Label Text="Enter Answer to Security Question" FontFamily="Papyrus" FontSize="20" />
<Entry x:Name="securityQuestionAnswer" Placeholder="Answer" IsEnabled="false" />
<Button Text="Recover Password" Clicked="OnRecoverPasswordClicked" TextColor="Black" BackgroundColor="White" WidthRequest="60" FontFamily="Papyrus" FontSize="20" />
<Label x:Name="messageLabel" />
</StackLayout>
	</ContentPage.Content>
</ContentPage>
