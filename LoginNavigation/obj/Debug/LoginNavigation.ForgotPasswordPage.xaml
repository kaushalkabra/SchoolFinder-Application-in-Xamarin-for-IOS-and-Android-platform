<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="LoginNavigation.ForgotPasswordPage"
	Title="SchoolFinder" BackgroundImage ="background1.jpg">
	<ContentPage.Content>
		<ScrollView>
		<StackLayout VerticalOptions="StartAndExpand" Padding="20" Spacing="15">
<Label Text="Forgot Password" FontFamily="Papyrus" FontSize="20"/>
<Label Text="Username" FontFamily="Papyrus" FontSize="20"/>
<Entry x:Name="usernameEntry"/>
<Button Text="Get Secuirty Question" Clicked="getSecurityQuestion" TextColor="Black" BackgroundColor="White" WidthRequest="60" HeightRequest="35" FontFamily="Papyrus" FontSize="20" />
<Label Text="Security Question" FontFamily="Papyrus" FontSize="20"/>
<Entry x:Name="securityQuestion" TextColor="Black" IsEnabled="false"/>
<Label Text="Enter Answer to Question" FontFamily="Papyrus" FontSize="20" />
<Entry x:Name="securityQuestionAnswer" IsEnabled="false" />
<Button Text="Recover Password" Clicked="OnRecoverPasswordClicked" TextColor="Black" BackgroundColor="White" WidthRequest="60" HeightRequest="35" FontFamily="Papyrus" FontSize="20" />
<Label x:Name="messageLabel" FontFamily="Papyrus" FontAttributes="Bold" />
</StackLayout>
			</ScrollView>
	</ContentPage.Content>
</ContentPage>
